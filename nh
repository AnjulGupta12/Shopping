    private void processCardDetailsFromExcel() {
        FileInputStream file = null;
        Workbook workbook = null;
        
        try {
            file = new FileInputStream(new File(EXCEL_PATH));
            workbook = new XSSFWorkbook(file);
            Sheet sheet = workbook.getSheetAt(0);
            
            // Find card details column
            Row headerRow = sheet.getRow(0);
            int cardDetailsCol = -1;
            
            for (Cell cell : headerRow) {
                if ("Card Details".equals(cell.getStringCellValue())) {
                    cardDetailsCol = cell.getColumnIndex();
                    break;
                }
            }
            
            if (cardDetailsCol != -1 && sheet.getLastRowNum() >= 1) {
                Row dataRow = sheet.getRow(1);
                String cardDetails = getCellValue(dataRow.getCell(cardDetailsCol));
                
                // Populate card details field
                WebElement cardField = driver.findElement(By.id("cardNumber"));
                cardField.clear();
                cardField.sendKeys(cardDetails);
                
                WebElement expiryField = driver.findElement(By.id("expiry"));
                expiryField.sendKeys("12/25");
                
                WebElement cvvField = driver.findElement(By.id("cvv"));
                cvvField.sendKeys("123");
            }
            
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (workbook != null) workbook.close();
                if (file != null) file.close();
            } catch (IOException e) {
                e.printStackTrace();
            }
        }
    }
    
    private void processCardDetailsAndWriteMessage() {
        FileInputStream file = null;
        FileOutputStream outFile = null;
        Workbook workbook = null;
        
        try {
            file = new FileInputStream(new File(EXCEL_PATH));
            workbook = new XSSFWorkbook(file);
            Sheet sheet = workbook.getSheetAt(0);
            
            // Find or create Message column
            Row headerRow = sheet.getRow(0);
            int messageCol = -1;
            
            for (Cell cell : headerRow) {
                if ("Message".equals(cell.getStringCellValue())) {
                    messageCol = cell.getColumnIndex();
                    break;
                }
            }
            
            if (messageCol == -1) {
                messageCol = headerRow.getLastCellNum();
                Cell messageHeader = headerRow.createCell(messageCol);
                messageHeader.setCellValue("Message");
            }
            
            // Populate card details
            WebElement cardField = driver.findElement(By.id("cardNumber"));
            cardField.clear();
            cardField.sendKeys("4111111111111111");
            
            WebElement expiryField = driver.findElement(By.id("expiry"));
            expiryField.clear();
            expiryField.sendKeys("12/25");
            
            WebElement cvvField = driver.findElement(By.id("cvv"));
            cvvField.clear();
            cvvField.sendKeys("123");
            
            // Click on Make Payment
            WebElement makePaymentButton = driver.findElement(By.id("makePayment"));
            makePaymentButton.click();
            
            // Get success message
            String successMessage = "";
            try {
                WebElement messageElement = driver.findElement(By.xpath("//div[contains(@class,'success')]"));
                successMessage = messageElement.getText();
            } catch (Exception e) {
                successMessage = "Payment Successful";
            }
            
            // Write message to Excel
            if (sheet.getLastRowNum() >= 1) {
                Row dataRow = sheet.getRow(1);
                Cell messageCell = dataRow.getCell(messageCol);
                if (messageCell == null) {
                    messageCell = dataRow.createCell(messageCol);
                }
                messageCell.setCellValue(successMessage);
            }
            
            // Save Excel file
            outFile = new FileOutputStream(EXCEL_PATH);
            workbook.write(outFile);
            
            System.out.println("Success message written to Excel: " + successMessage);
            
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (workbook != null) workbook.close();
                if (file != null) file.close();
                if (outFile != null) outFile.close();
            } catch (IOException e) {
                e.printStackTrace();
            }
        }
    }
    
    @AfterClass
    public void afterClass() {
        // Quit the driver
        if (driver != null) {
            driver.quit();
        }
        System.out.println("\n=== All tests completed and browser closed ===");
    }
    
    // Helper methods
    private void takeScreenshot(String fileName) {
        try {
            File screenshotDir = new File(SCREENSHOT_DIR);
            if (!screenshotDir.exists()) {
                screenshotDir.mkdirs();
            }
            
            File screenshot = ((TakesScreenshot) driver).getScreenshotAs(OutputType.FILE);
            String savePath = SCREENSHOT_DIR + fileName;
            
            org.apache.commons.io.FileUtils.copyFile(screenshot, new File(savePath));
            System.out.println("Screenshot saved: " + savePath);
            
        } catch (IOException e) {
            System.out.println("Failed to take screenshot: " + e.getMessage());
        }
    }
    
    private String getCellValue(Cell cell) {
        if (cell == null) return "";
        
        switch (cell.getCellType()) {
            case STRING:
                return cell.getStringCellValue();
            case NUMERIC:
                double num = cell.getNumericCellValue();
                if (num == Math.floor(num)) {
                    return String.valueOf((int) num);
                } else {
                    return String.valueOf(num);
                }
            case BOOLEAN:
                return String.valueOf(cell.getBooleanCellValue());
            default:
                return "";
        }
    }
}