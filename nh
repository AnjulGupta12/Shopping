                if (offerDesc.contains("20 INR off")) {
                    System.out.println("Offer Name: " + offerName);
                    System.out.println("  Description: " + offerDesc);
                }
            }
        }
        
        System.out.println("=== test30 completed successfully ===");
    }
    
