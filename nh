public class CourseManagementTest {
    
    private WebDriver driver;
    private static final String EXCEL_PATH = "/home/ppliedFiles/Data.xls";
    private static final String SCREENSHOT_DIR = "/home/pliedFiles/Screenshots/";
    
    @BeforeClass
    public void beforeClass() {
        // Setup method
        System.setProperty("webdriver.gecko.driver", "/home/top/geckodriver");
        
        driver = new FirefoxDriver();
        
        // Launch the application
        driver.get("http://ion/index.html");
        
